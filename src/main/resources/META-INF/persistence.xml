<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="GridOnMSystem_PU" transaction-type="JTA">
    <jta-data-source>jobpromotion(dev)</jta-data-source>
    <!--<mapping-file>/META-INF/orm.xml</mapping-file>当XML描述文件以orm.xml命名时，可不指定此元素-->
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <shared-cache-mode>DISABLE_SELECTIVE</shared-cache-mode>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="DEFAULT_PU" transaction-type="JTA">
    <jta-data-source>jdbc/sample</jta-data-source>
    <class>modelgen.EquipmentModel</class>
    <class>modelgen.Netnode</class>
    <class>modelgen.Roomspot</class>
    <class>modelgen.Station</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
